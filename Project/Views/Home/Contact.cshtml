@model Project.Models.ManageStaff.ContactUsForm

@{
    ViewBag.Title = "Contact";
}

    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Contact Us</h2>
                    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">

                    @using (Html.BeginForm("Contact", "Home",FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Your Name *" })
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", placeholder = "Your Email Address *" })
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Your Phone Number *" })
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Your Message *" })
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-xl">Send Message</button>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
