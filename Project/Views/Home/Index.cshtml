<!-- Contact Section -->
<section id="contact" style="background-color:#111;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading" style="color:#fff;">Contact Us</h2>
                <h3 class="section-subheading text-muted">Send all your messages and queries here.</h3><br />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">

                @using (Html.BeginForm("Contact", "Home"))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.ContactUsForm.Name, new { @class = "form-control", placeholder = "Your Name *" })
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.ContactUsForm.EmailAddress, new { @class = "form-control", placeholder = "Your Email Address *" })
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.ContactUsForm.PhoneNumber, new { @class = "form-control", placeholder = "Your Phone Number *" })
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextAreaFor(m => m.ContactUsForm.Message, new { @class = "form-control", placeholder = "Your Message *" })
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-success" onclick="myFunction()" style="margin-bottom:15px;">Send Message</button><br />
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</section>

<script type="text/javascript" style="color:aqua;">

    function myFunction() {
        alert("Message Sent!");
    }
</script>

