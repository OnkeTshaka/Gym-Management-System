@model IEnumerable<Project.Models.OnlineShopping.Category>

@{
    ViewBag.Title = "Index";
}
    <div style="margin-top:20px;">
        @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Index", "Admin")" class="btn btn-success pull-right">
                <span class="fa fa-dashboard fa-fw  text-info"></span> Dashboard
            </a>
        }
    </div>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            <div class="btn-group">
                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                    Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Edit", "Edit", new { id = item.CategoryID })</li>
                    <li>@Html.ActionLink("Details", "Details", new { id = item.CategoryID })</li>
                    <li>@Html.ActionLink("Delete", "Delete", new { id = item.CategoryID })</li>
                </ul>
            </div>
        </td>
    </tr>
}

</table>
