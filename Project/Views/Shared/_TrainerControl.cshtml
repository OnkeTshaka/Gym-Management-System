
@model Project.Models.ManageStaff.Trainer

@if (Request.IsAuthenticated)
{
    <div class="panel panel-default" style="width:90%;">
        <div class="panel-heading">
            <h3 class="panel-title">Control</h3>
        </div>
        <div class="panel-body">
            <div class="form-actions no-color">
                <div class="col-md-4">
                    @using (Html.BeginForm("Edit", "Trainers", new { Id = @Model.TrainerID }, FormMethod.Get))
                    {
                        <input type="submit" name="action" value="Edit" class="col-md-12 btn btn-warning" />
                    }
                </div>
                <div class="col-md-4">
                    @using (Html.BeginForm("Edit", "Trainers", new { Id = @Model.TrainerID }, FormMethod.Get))
                    {
                        <input type="submit" name="action" value="Delete" class="col-md-12 btn btn-danger" />
                    }
                </div>
            </div>
        </div>
    </div>
}
