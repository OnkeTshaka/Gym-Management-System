@model Project.Models.OnlineShopping.Product

@{
    ViewBag.Title = "Details";
}
<h1>@Model.Name, @Model.Category.CategoryName</h1>
<span></span>

<div class="container" style="margin-top:20px;margin-left:170px;">
    <div class="col-md-9">

        <div class="thumbnail">
            
            <a href="@Url.Action("Index", "Products")">
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Picture, 0, Model.Picture.Length)" style="width: 350px; height: 300px;padding:20px;" alt="" />
            </a>
            <div class="caption-full" style="color:#111;">
                <p>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.Label("Name")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt>
                            @Html.Label("Category")
                        </dt>
                        <dd>
                            <span class="label label-danger" style="font-size:15px;">@Model.Category.CategoryName</span>
                        </dd>
                        @*<dt>
                            @Html.Label("Quantity")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Quantity)*@
                        </dd>
                        <dt>
                            @Html.Label("Posted On")
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Time)
                        </dd>
                        <dt>
                            @Html.Label("Price")
                        </dt>
                        <dd>
                            @("R"+ Html.DisplayFor(model => model.Price))
                        </dd>
                    </dl>
                </p>

            </div>
        </div>

        @if (User.IsInRole("Admin"))
        {
            @Html.Partial("_ProductControl")

        }
    </div>
</div>



