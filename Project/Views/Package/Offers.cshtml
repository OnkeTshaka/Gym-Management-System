@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Project.Models.Essentials.Package>
@{
    ViewBag.Title = "Offers";
}

<!-- Price Plan Section Begin -->
    <section class="price-section spad set-bg" style="background-image: url('../Images/price-bg.jpg');">
        <div class="row">
            <div class="section-title text-center" style="color:#fff;font-weight:900;">
                <h2 style="font-weight:bold;">CHOOSE YOUR MEMBERSHIP PLAN</h2>
            </div>
            <br />
            @foreach (var item in Model)
            {
                <div class="col-lg-4" style="margin-bottom:0;padding:20px;margin-bottom:0;">
                    <div class="single-price-plan">
                        <h4>@Html.DisplayFor(modelItem => item.PackageType)</h4>
                        <div class="price-plan">
                            @*<p>Membership Price</p>*@
                            <h2>@Html.DisplayFor(modelItem => item.Monthly_Fee) <span>R</span></h2>
                            @*<p>Monthly</p>*@
                        </div>
                        <ul>
                            <li>Duration: @Html.DisplayFor(modelItem => item.Duration)  Months</li>
                            <li>Joining fee: R @Html.DisplayFor(modelItem => item.Joining_Fee)</li>
                            <li>Description: @Html.DisplayFor(modelItem => item.Description)</li>
                            <li>Total Cost:  @Html.DisplayFor(modelItem => item.TotalCost) </li>
                        </ul>

                    </div>
                </div>
            }


        </div>
        <a class="btn btn-success" style="color:#fff; margin-left:auto" href="@Url.Action("Create", "MembershipPlans")">Request Membership</a>
    </section>
<div>
    @if (Model.PageCount > 1)
    {
        <div class="clear">
            <span style="font-weight:500;">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount</span>
            <div class="div-pagination">
                @Html.PagedListPager(Model, page => Url.Action("Offers", new { page = page }))
            </div>
        </div>
    }
</div>