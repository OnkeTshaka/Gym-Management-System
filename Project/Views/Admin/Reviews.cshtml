@model IEnumerable<Project.Models.ManageStaff.CommentsRating>

@{
    ViewBag.Title = "Reviews";
}
    <h2 class="text-center" style="font-weight:900;margin-bottom:60px;">Reviews</h2><hr />
<div class="btn-group" style="margin-top:30px;">
    <a type="button" class="btn btn-default btn-lg pull-left" style="margin-bottom:50px;" href="@Url.Action("Index", "RateBookings")">Class Reviews</a>
    <a type="button" class="btn btn-default btn-lg pull-left" style="margin-bottom:50px;" href="@Url.Action("Index", "RateClasses")">Bookings Reviews</a>
</div>
<div class="panel panel-default" style="margin-top:20px;">
    <!-- Default panel contents -->
    <div class="panel-heading"><h4>Recent Reviews For Trainers </h4></div>

    <table class="table table-striped table-bordered" style="color:#111;">
        <tr>
            <th>
                @Html.Label("Review By")
            </th>
            <th>
                @Html.Label("Trainer")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThisDateTime)
            </th>
            <th>
                @Html.Label("Control")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Member.Username, "Details", "Profile", new { area = "", id = item.Member.ID }, new { target = "_blank" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThisDateTime)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteReview", new { id = item.CommentId })
                </td>
            </tr>
        }
    </table>
</div>