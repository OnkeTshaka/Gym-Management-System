@model IEnumerable<Project.Models.ManageStaff.ContactUsForm>

@{
    ViewBag.Title = "Contact Forms";
}
<div class="container">

    <h2>Contact Forms</h2>
    <a href="@Url.Action("Index", "Admin")" class="btn btn-default pull-right">
        <span class="fa fa-dashboard fa-fw  text-info"></span> Dashboard
    </a>
    <p>Whole Contact Forms on System - Statistics Overview</p>

    <div class="row">
        <div class="col-md-12">
            <br /><br />
            <table class="table table-hover table-responsive" id="messages">
                <thead>
                    <tr>
                        <th><span class="glyphicon glyphicon-user"></span> Name</th>
                        <th><span class="glyphicon glyphicon-inbox"></span> Email</th>
                        <th><span class="glyphicon glyphicon-envelope"></span> Message</th>
                        <th><span class="glyphicon glyphicon-calendar"></span> Time</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ContactForm in Model)
                    {
                        <tr>
                            <td>@ContactForm.Name</td>
                            <td>@ContactForm.EmailAddress</td>
                            <td>@ContactForm.Message</td>
                            <td>@ContactForm.TimeStamp</td>
                            <td>
                                <a href="@Url.Action("ViewContactForm", "Admin", new { id = ContactForm.Id})" class="btn btn-info">View</a>
                                <a href="@Url.Action("Delete", "Admin", new { id = ContactForm.Id})" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
