                    </div>
                    <div class="panel-body">
                        <div class="list-group">
                            @foreach (var Member in Model.Members)
                            {
                                DateTime Time = DateTime.Parse(Member.JoinDate);
                                String TimeString = Time.ToString("dd/MM/yyyy");
                                Time = DateTime.ParseExact(TimeString, "dd/MM/yyyy", null);
                                DateTime Today = DateTime.ParseExact(DateTime.Now.ToString("dd/MM/yyyy"), "dd/MM/yyyy", null);
                                if (DateTime.Compare(Time, Today) == 0)
                                {
                                    <a href="@Url.Action("Details", "Profile", new { target ="_blank",id =Member.ID })" class="list-group-item">
                                        <span class="badge">@Member.ID</span>
                                        @if (Member.Profile != null)
                                        {
                                            <img src="~/Images/@Member.Profile" style="width:60px;height:60px;border-radius:50%" /><b style="margin-left:12px;text-transform:uppercase; color:forestgreen;font-size:30px;">@Member.Username</b>

                                        }
                                        else
                                        {
                                            <img src="~/Images/icon.png" style="width:60px;height:60px;border-radius:50%" /><b style="margin-left:12px;text-transform:uppercase; color:forestgreen;font-size:30px;">@Member.Username</b>

                                        }
                                    </a>
                                }
                            }

                        </div>
