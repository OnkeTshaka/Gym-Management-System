    <script>
        $(document).ready(function () {
            $.getJSON("/Stats/GetData", function (data) {
                Highcharts.chart('container', {
                    chart: {
                        plotBackgroundColor: null,
                        plotBorderWidth: null,
                        plotShadow: false,
                        type: 'pie'
                    },
                    title: {
                        text: '<b>MEMBERSHIP CANCELLATIONS</b>'
                    },
                    tooltip: {
                        pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
                    },
                    accessibility: {
                        point: {
                            valueSuffix: '%'
                        }
                    },
                    plotOptions: {
                        pie: {
                            allowPointSelect: true,
                            cursor: 'pointer',
                            dataLabels: {
                                enabled: true,
                                format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                            }
                        }
                    },
                    series: [{
                        name: 'Results',
                        colorByPoint: true,
                        data: [{
                            name: "Expensive",
                            y: data.Expensive,
                            sliced: true,
                            selected: true
                        }, {
                            name: "Busy",
                            y: data.Busy
                        },
                        {
                            name: "Environment",
                            y: data.Environment
                        },
                        {
                            name: "Afford",
                            y: data.Afford
                        }, {
                            name: "Other",
                            y: data.Other
                        }]
                    }]
                });
            });
        });



    </script>
