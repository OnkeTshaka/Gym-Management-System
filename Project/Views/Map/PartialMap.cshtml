
@{
    ViewBag.Title = "Index";
}

<style>
    #map {
        height: 500px;
        width: 1140px;
    }
</style>
<br />
<br />
<div class="row" align="center" style="color:#111;">
    <div id="map"></div>
    <script>
        //var map;
        function initMap() {
            var uluru = { lat: -29.856349, lng: 31.003004 };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 14,
                center: uluru
            });

            var contentString = '<div id="content">' +
                '<div id="siteNotice">' +
                '</div>' +
                '<h1 id="firstHeading" class="firstHeading">Fitness Company</h1>' +
                '<div id="bodyContent">' +
                '<p><b>Fitness Company</b>, Long Standing History: Auguste Gand opened and managed one of the first gyms in Durban, South Africa- 1962. He has since assisted and trained many atheletes and bodybuilders to achieve their goals...Well known bodybuilders like Arnold Schwarzenegger, Frank Zane, Reg Park and Mike Katz have also visited.</p>' +
                '</div>' +
                '</div>';

            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            var marker = new google.maps.Marker({
                position: uluru,
                map: map,
                title: 'Fitness Company'
            });
            //marker.addListener('click', function () {
            //    infowindow.open(map, marker);
            //});
            marker.addListener('mouseover', function () {
                infowindow.open(map, marker)
            });
            marker.addListener('mouseout', function () {
                infowindow.close()
            });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCXsURgaO6AD23ZK00eNaRUq5O-E0RRe_0&callback=initMap"
            type="text/javascript"></script>
</div>
